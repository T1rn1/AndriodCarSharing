<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue"
    tools:context=".app.CreateCollectionFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBooks"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnCreateCollection"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Добавить книги"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCreateBack"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/btnCreateCollection"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/btnCreateCollection"
        android:background="@drawable/baseline_arrow_circle_left_24" />
</RelativeLayout>